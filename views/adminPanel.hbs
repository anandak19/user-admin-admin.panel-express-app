<div class="container-fluid w-100 d-flex justify-content-center align-items-center form-wrapper">
    <div class="main-card container px-5 h-50 w-100 rounded">
        <h1 class="text-center">Admin panel</h1>

        <div class="container">
            <form action="/api/admin/action/search" method="post" class="d-flex justify-content-end align-items-center">
                <input class="search-box" type="text" name="username" placeholder="Search User">
                <button type="submit" class="btn btn-primary mx-2 btn-sm">Search</button>
                <a href="/api/signup" class="btn btn-warning mx-2 btn-sm">Add User</a>
            </form>
        </div>
        <div class="container mt-5">
            <table class="table table-bordered table-striped text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Is Admin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if users.length}}
                    {{#each users}}
                    <tr>
                        <td>{{this.username}}</td>
                        <td>{{this.fullname}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.password}}</td>
                        <td>{{this.isAdmin}}</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/api/admin/updateform/{{this._id}}">Update</a>
                            <form action="/api/admin/action/delete/{{this.username}}" method="POST"
                                onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn btn-danger btn-sm mt-2">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <tr>
                        <td colspan="6" class="text-center">No users found</td>
                    </tr>
                    {{/if}}

                </tbody>
            </table>
        </div>

    </div>
</div>